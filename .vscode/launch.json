{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Tagged Tests",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      // "program":"${workspaceFolder}/bin/Debug/net8.0/sampleProject.dll",
      "args": [
        "test",
        "--filter",
        "TestCategory=test2"
      ],
      "env": {
        "browser": "firefox",
        "ENVIRONMENT": "qa"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}